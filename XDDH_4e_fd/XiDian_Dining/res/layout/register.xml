<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFCC">
	<TableLayout
        android:id="@+id/register_TableLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
        	android:id="@+id/register_textView0"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textSize="20sp"
        	android:textColor="#F7F7F7"
        	android:background="#ffb4a050"
        	android:text="注册" />
        <TableRow>
            <TextView
                android:id="@+id/register_textView1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#cc0099"
                android:text="账号" />
            <EditText
                android:id="@+id/register_editText1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        		android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="*必填" >
             <requestFocus />
            </EditText>
            <TextView
                android:id="@+id/register_textView11"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/register_textView2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
        		android:textColor="#cc0099"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="密码" />
            <EditText
                android:id="@+id/register_editText2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        		android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="*必填" />
            <TextView
                android:id="@+id/register_textView22"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/register_textView3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
        		android:textColor="#cc0099"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="确认密码" />
            <EditText
                android:id="@+id/register_editText3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        		android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="*必填" />
            <TextView
                android:id="@+id/register_textView33"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/register_textView4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
        		android:textColor="#cc0099"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="昵称" />
            <EditText
                android:id="@+id/register_editText4"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        		android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="*必填" />
            <TextView
                android:id="@+id/register_textView44"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/register_textView5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="性别" />
            <RadioGroup
       			android:id="@+id/register_radioGroup1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:contentDescription="性别"
        		android:orientation="horizontal" >

        		<RadioButton
            		android:id="@+id/register_radioMale"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
                	android:layout_marginTop="20dp"
            		android:checked="true"
            		android:textSize="20sp"
            		android:text="男" >
        		</RadioButton>

        		<RadioButton
           			android:id="@+id/register_radioFemale"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
                	android:layout_marginTop="20dp"
            		android:textSize="20sp"
            		android:text="女" >
        		</RadioButton>
        		<RadioButton
           			android:id="@+id/register_radioNone"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
                	android:layout_marginTop="20dp"
            		android:textSize="20sp"
            		android:text="None" >
            	</RadioButton>
    		</RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/register_textView6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="年级" />

            <Spinner
                android:id="@+id/register_spinner1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="35dp" />
            
        </TableRow>
        
    </TableLayout>

	<TextView
	    android:id="@+id/register_textView7"
	    android:layout_marginTop="40dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
        android:textSize="20sp"
	    android:text="" />

	<Button
	    android:id="@+id/register_button1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#b4a050"
	    android:text="下一步" />
	<Button
	    android:id="@+id/register_button2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:background="#b4a050"
	    android:text="退出" />

</LinearLayout>
