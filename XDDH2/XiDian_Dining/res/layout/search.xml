<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFCC">
    <TableLayout android:id = "@+id/search_TableLayout01"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
<!--  
        <TextView
            android:id="@+id/search_textView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffb4a050"
            android:textColor="#F7F7F7"
            android:text="搜索" />
-->
        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/search_textView1"
                android:layout_marginLeft="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="餐厅名称" />
            <Spinner
                android:id="@+id/search_spinner1"
                android:layout_width="150dp"
                android:layout_height="35dp" />
            
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/search_textView2"
                android:layout_marginLeft="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="楼层" />
            <Spinner
                android:id="@+id/search_spinner2"
                android:layout_width="150dp"
                android:layout_height="35dp" />
            
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/search_textView3"
                android:layout_marginLeft="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="窗口名称" />
            <Spinner
                android:id="@+id/search_spinner3"
                android:layout_width="150dp"
                android:layout_height="35dp" />
            
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/search_textView4"
                android:layout_marginLeft="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="菜名" />

            <Spinner
                android:id="@+id/search_spinner4"
                android:layout_width="150dp"
                android:layout_height="35dp" />
            
        </TableRow>
        <Button
            android:id="@+id/search_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0D6BF"
            android:text="搜索" />
        <TextView
                android:id="@+id/search_textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
            	android:textSize="20sp"
                android:text="" />
    </TableLayout>
	<ListView
        android:id="@+id/search_listView1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:divider="#f00"
        android:dividerHeight="2px"
        android:headerDividersEnabled="false"/>
	<Button
            android:id="@+id/search_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0D6BF"
            android:text="返回" />
</LinearLayout>
