<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" 
    tools:context="com.example.myproject.MainActivity$PlaceholderFragment">
    
	<TableLayout
        android:id="@+id/fragment_main_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:alpha="30"
        android:background="#d0383838">
        <TextView
            android:id="@+id/fragment_textView3"
	        android:layout_marginLeft="50dp"
	        android:layout_marginTop="20dp"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="67dp"
	        android:textSize="13sp"
	        android:textColor="#ffff"
	        android:gravity="center"
	        android:text=""/>
	    <TableRow
	        android:layout_marginTop="50dp">
	        <TextView
	            android:id="@+id/fragment_textView1"
	            android:layout_marginLeft="50dp"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:background="@drawable/number"
	            />

	        <EditText
	            android:id="@+id/fragment_editText1"
	            android:layout_width="200dp"
	            android:layout_marginTop="7dp"
	            android:layout_height="30dp"
	            android:background="#383838"
	            android:textColor="#ffff"
	            android:textSize="20sp" >
	            <requestFocus />
	        </EditText>
	    </TableRow>
	    <TableRow
	        android:layout_marginTop="30dp">
	        <TextView
	            android:id="@+id/fragment_textView2"
	            android:layout_marginLeft="50dp"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:background="@drawable/passwd"/>

	        <EditText
	            android:id="@+id/fragment_editText2"
	            android:layout_width="200dp"
	            android:layout_height="30dp"
	            android:textSize="20sp" 
	            android:background="#383838"
	            android:textColor="#ffff"
	            android:layout_marginTop="7dp"
	            android:inputType="textPassword"/>
	    </TableRow>
	    <Button
	        android:layout_marginTop="30dp"
	        android:id="@+id/fragment_button1"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="50dp"
	        android:layout_marginRight="67dp"
	        android:background="#802d921c"
	        android:gravity="center"
	        android:textColor="#ffff"
	        android:text="登录" />
	    <Button
	        android:layout_marginTop="30dp"
	        android:id="@+id/fragment_button2"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="50dp"
	        android:layout_marginRight="67dp"
	        android:gravity="center"
	        android:background="#802d921c"
	        android:textColor="#ffff"
	        android:text="注册" />
	    
	</TableLayout>
</LinearLayout>