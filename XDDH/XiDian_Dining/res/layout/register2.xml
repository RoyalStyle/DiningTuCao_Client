<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFCC">
    <TableLayout
        android:id="@+id/register_TableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
        	android:id="@+id/register_textView8"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textSize="20sp"
        	android:textColor="#F7F7F7"
        	android:background="#ffb4a050"
        	android:text="注册" />
        <TableRow>
            <TextView
                android:id="@+id/register_textView9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="E-Mail" />
            <EditText
                android:id="@+id/register_editText9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        		android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="选填" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/register_textView10"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="电话" />
            <EditText
                android:id="@+id/register_editText10"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
        		android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="选填" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/register_textView11"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
        		android:textSize="20sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="生日" />

            <Button
                android:id="@+id/register_date_button"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#b4a050"
                android:text="日期" />
            
        </TableRow>
        
    </TableLayout>
    <TextView
	    android:id="@+id/register_textView13"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
        android:textSize="20sp"
	    android:text="" />

	<Button
	    android:id="@+id/register_button3"
	    android:layout_width="match_parent"
	    android:background="#b4a050"
	    android:layout_height="wrap_content"
	    android:text="完成" />
	<Button
	    android:id="@+id/register_button4"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#b4a050"
	    android:layout_marginTop="10dp"
	    android:text="退出" />

</LinearLayout>
